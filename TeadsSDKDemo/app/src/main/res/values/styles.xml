<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="ThemeTeads" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/primaryDef</item>
        <item name="colorPrimaryDark">@color/primaryDarkDef</item>
        <item name="colorAccent">@color/primaryDarkDef</item>
        <item name="android:textColorPrimary">@color/primaryDef</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="p">default</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_theme</item>
    </style>
</resources>
